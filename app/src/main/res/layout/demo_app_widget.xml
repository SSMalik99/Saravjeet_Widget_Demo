<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.Saravjeet_Widget_Demo.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.Saravjeet_Widget_Demo.AppWidgetContainer">

    <StackView
        android:id="@+id/widgetStack"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:loopViews="true"/>

    <TextView
        android:id="@+id/appwidget_text"
        style="@style/Widget.Saravjeet_Widget_Demo.AppWidget.InnerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="8dp"
        android:contentDescription="@string/appwidget_text"
        android:text="@string/appwidget_text"
        android:textSize="24sp"
        android:textStyle="bold|italic" />
</FrameLayout>